# Joint Regression
layer {
  name: "reg_loss"
  type: "EuclideanLoss"
  bottom: "fc8-new"
  bottom: "joint"
  top: "reg_loss"
  loss_weight: 4.0
}

# LOCALIZATION
layer {
  name: "bbox_gen"
  type: "BBoxPipeline"
  bottom: "fc8-new"
  top: "bbox_gen"
  bbox_pipeline_param  {
    connection_config_file: "torso_connection.txt"
    x_ext_factor: 1.2
    y_ext_factor: 1.2
  }
}
layer {
  name: "stn"
  type: "SpatialTransformer"
  bottom: "conv4"
  bottom: "bbox_gen"
  top: "stn"
  spatial_transformer_param {
    theta1: 0
    theta3: 0
  }
}

